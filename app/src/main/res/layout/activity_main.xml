<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27 October,2019"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:id="@+id/date"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min"
        android:id="@+id/min"
        android:layout_below="@id/date"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/min"
        android:id="@+id/max"
        android:text="Max"
        android:layout_marginLeft="8dp"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_below="@id/date"
        android:paddingTop="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/min"
        android:text="32"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="60sp"
        android:layout_marginLeft="16dp"
        android:id="@+id/temp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="o"
        android:textColor="@android:color/background_light"
        android:layout_below="@id/min"
        android:layout_toRightOf="@id/temp"
        android:layout_marginTop="8dp"
        android:id="@+id/deg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textColor="@android:color/background_light"
        android:layout_below="@id/min"
        android:layout_toRightOf="@id/deg"
        android:layout_marginTop="8dp"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp"
        android:paddingLeft="20dp"
        android:text="Description"
        android:textColor="@android:color/background_light"
        android:id="@+id/des"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="San Francisco"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:id="@+id/san"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="US"
        android:textColor="@android:color/background_light"
        android:layout_below="@id/san"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:paddingRight="32dp"
        android:textSize="20sp"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:src="@drawable/humidity"
        android:id="@+id/humid"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/des"
        android:src="@drawable/sunrise"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
       android:padding="8dp"
        android:id="@+id/sunrise"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunrise"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_toRightOf="@id/sunrise"
        android:layout_below="@id/des"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:id="@+id/SunT"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunrise"
        android:id="@+id/sunt"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_toRightOf="@id/sunrise"
        android:layout_below="@id/SunT"
        android:paddingLeft="8dp"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/sunrise"
        android:src="@drawable/sunset"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/sunset"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunset"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_toRightOf="@id/sunset"
        android:layout_below="@id/sunt"
        android:padding="8dp"
        android:id="@+id/SetT"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunset"
        android:id="@+id/sett"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_toRightOf="@id/sunset"
        android:layout_below="@id/SetT"
        android:paddingLeft="8dp"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/sunset"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/wind"
        android:id="@+id/wind"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_toRightOf="@id/wind"
        android:layout_below="@id/sett"
        android:padding="8dp"
        android:id="@+id/WindT"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind"
        android:id="@+id/windt"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_toRightOf="@id/wind"
        android:layout_below="@id/WindT"
        android:paddingLeft="8dp"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/wind"
        android:id="@+id/pressure"
        android:src="@drawable/pressure"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_toRightOf="@id/pressure"
        android:layout_below="@id/windt"
        android:padding="8dp"
        android:id="@+id/PressureT"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure"
        android:id="@+id/pressuret"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_toRightOf="@id/pressure"
        android:layout_below="@id/PressureT"
        android:paddingLeft="8dp"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/humidity"
        android:layout_below="@id/pressure"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/humidity"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_toRightOf="@id/humidity"
        android:layout_below="@id/pressuret"
        android:padding="8dp"
        android:id="@+id/HumidT"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:id="@+id/humidt"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_toRightOf="@id/humidity"
        android:layout_below="@id/HumidT"
        android:paddingLeft="8dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/humidity"
        android:background="@android:color/black"
        android:text="Few More DAYS"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:id="@+id/bu"/>


</RelativeLayout>